{
	"manifest_version": 2,

	"name": "GoPosmotrim Chrome Extension",
	"version": "0.9.1",
	"description": "GoPosmotrim button for YouTube UI",

	"background": {
	    "persistent": false,
	    "scripts": ["background.js"]
	},
	"content_scripts": [{
		"css": ["styles.css"],
		"js": ["main.js"],
		"matches": [ "https://*/*" ]
	}],
	"permissions": ["tabs"],

	"icons": { 
		"16": "icon-270.png",
		"48": "icon-270.png",
		"128": "icon-270.png"
	}
}
